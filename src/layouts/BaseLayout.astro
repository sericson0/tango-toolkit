---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Resources for tango dancers, DJs, and organizers. Courses, lessons, and materials to deepen your tango journey." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={`${title} | Tango Toolkit`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/Logo.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/images/Logo.png" />
    <title>{title} | Tango Toolkit</title>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="logo">
          <img src="/images/Logo.png" alt="Tango Toolkit" class="logo-img" />
          <span class="logo-text">Tango Toolkit</span>
        </a>
        <nav class="nav">
          <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a>
          <a href="/dance/" class={Astro.url.pathname.startsWith('/dance') ? 'active' : ''}>Dance</a>
          <a href="/dj/" class={Astro.url.pathname.startsWith('/dj') ? 'active' : ''}>DJ</a>
          <a href="/organizer/" class={Astro.url.pathname.startsWith('/organizer') ? 'active' : ''}>Organizer</a>
        </nav>
        <button class="nav-toggle" aria-label="Toggle menu" type="button">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-grid">
          <div>
            <strong>Tango Toolkit</strong>
            <p>Resources for dancers, DJs, and organizers.</p>
          </div>
          <div>
            <strong>Resources</strong>
            <a href="/dj/">DJ Resources</a>
            <a href="/dance/">Dance Resources</a>
            <a href="/organizer/">Organizer Resources</a>
          </div>
          <div>
            <strong>Connect</strong>
            <p>Â© {new Date().getFullYear()} Tango Toolkit</p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile nav toggle
      document.querySelector('.nav-toggle')?.addEventListener('click', () => {
        document.querySelector('.nav')?.classList.toggle('open');
      });
    </script>
  </body>
</html>

<style is:global>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: white;
    border-bottom: 1px solid var(--color-slate-200);
    box-shadow: var(--shadow-sm);
  }

  .site-header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-slate-900);
    font-weight: 400;
  }

  .logo:hover {
    color: var(--color-primary);
  }

  .logo-img {
    height: 2.5rem;
    width: auto;
  }

  .nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav a {
    font-weight: 500;
    color: var(--color-slate-600);
  }

  .nav a:hover,
  .nav a.active {
    color: var(--color-primary);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav-toggle span {
    width: 24px;
    height: 2px;
    background: var(--color-slate-700);
  }

  @media (max-width: 768px) {
    .nav {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      background: white;
      padding: 1.5rem;
      gap: 1rem;
      border-bottom: 1px solid var(--color-slate-200);
      display: none;
    }

    .nav.open {
      display: flex;
    }

    .nav-toggle {
      display: flex;
    }
  }

  .site-footer {
    margin-top: 4rem;
    padding: 3rem 0;
    background: var(--color-slate-800);
    color: var(--color-slate-300);
  }

  .site-footer a {
    color: var(--color-orange-300);
    display: block;
    margin-top: 0.5rem;
  }

  .site-footer a:hover {
    color: var(--color-orange-200);
  }

  .footer-grid {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
  }
</style>
